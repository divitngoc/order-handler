<configuration>
	<appender name="CONSOLE"
		class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>
				%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n
			</Pattern>
		</layout>
	</appender>

	<root level="debug">
		<appender-ref ref="CONSOLE" />
	</root>

</configuration>